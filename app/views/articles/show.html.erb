<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.body %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> <br>
<% if @article.comments.any? %>
<h2>Comments</h2>
 
  <table>
  <thead>
    <tr>
  <th>Commenter</th>
  <th>Comment</th>
  <th></th>
  </tr> 
  </thead>
  <tbody>
  <% @article.comments.each do |comment| %>
    <tr>
      <td><%= comment.commenter %></td>
      <td><%= comment.body %></td>
      <td><%= link_to 'Destroy Comment', comment_path(comment),
               method: :delete,
               data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'edit comment' , edit_comment_path(comment)%></td>
      <td><%= link_to 'show comment' , comment_path(comment)%></td>
    </tr>
    <%end%>
  </tbody>
</table>
<% end %>
<%= link_to 'New Comment' , new_article_comment_path(@article) %>
<%= link_to 'Back', articles_path %>